---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import { headerData } from '~/navigation';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import { getImage } from 'astro:assets';
import appStoreImage from '~/assets/images/app-store.png';
import googlePlayImage from '~/assets/images/google-play.png';
import peteyMapImage from '~/assets/images/jungle.jpg';
import peteyRaftImage from '~/assets/images/peteyanimals.jpg';
import stretchImage from '~/assets/images/stretch.jpg';
import meditateImage from '~/assets/images/meditate.jpg';


const appStoreDownloadLink = 'https://github.com/onwidget/astrowind';
const googlePlayDownloadLink = 'https://github.com/onwidget/astrowind';

// const appStoreImg = await getImage({src: appStoreImage, inferSize: true});
const googlePlayImg = await getImage({src: googlePlayImage, inferSize: true});
const peteyMapImg = await getImage({src: peteyMapImage, inferSize: true});
// const peteyRaftImg = await getImage({src: peteyRaftImage, inferSize: true});

// console.log("PETEY MAP IMAGE IS: ", JSON.stringify(peteyMapImg))
// console.log("PETEY RAFT IMAGE IS: ", JSON.stringify(peteyRaftImg))
const metadata = {
  title: 'The Adventures of Captain Petey',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      position="left"
      links={[
        { text: 'Features', href: '#' },
        { text: 'About', href: '#' },
       //{ text: 'Blog', href: 'blog' },
      ]}

      actions={[
        {
          text: 'Download',
          href: '#download',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    image={{
    src: peteyMapImg,
    width: peteyMapImg.width,
    height: peteyMapImg.height,
    alt: "Petey Jungle Map"
  }}
  
  >
    <Fragment slot="title">
      Help <span class="text-accent dark:text-white highlight">Captain Petey</span> <br /> on his journey 
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Use your body to keep Petey in shape so he can escape his desert island.
      </span>
      As he evolves, you'll unlock new challenges and adventures.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
   <!--   <Button variant="link" href={appStoreDownloadLink}>
        <Image {...appStoreImg} alt="App Store Image"  />
      </Button>-->

  <!--    <Button variant="link" href={googlePlayDownloadLink}>
        <Image {...googlePlayImg} alt="Google Play Image" />
      </Button> -->
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="features"
    title="Let's Help Petey!"
    subtitle="Petey the Capybara got stranded on a desert island and needs help to get in shape so he can resume is adventures. Use your mobile phone's camera to accompany Petey through a series of stretches and other exercises to gear up for adventure."
    tagline="mission 1"
    columns={2}
    items={[
      {
        title: 'Download & Join Petey’s Island 🌴',
        description: `Tap that button! Your wellness sidekick (me!) is ready to roll!`,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Start Your Stretch Quest with Petey🧘‍♂️',
        description:
          'Your body powers the journey. No pressure, just progress.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Crack Open Your First Coconut 🥥',
        description: 'A little movement goes a long way. Let’s build the habit—one coconut at a time.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Level up and explore🐾',
        description: `Every stretch helps Petey evolve and brings you closer to your wellness goals.`,
        icon: 'tabler:square-number-4',
      },
    ]}
    {{ //image={{
      // src: peteyRaftImg,
      // width: peteyRaftImg.width,
      // height: peteyRaftImg.height,
      // alt: 'Captain Petey relaxing on a raft',
    }}
    

  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: '250+ activities',
        description:
          'Stretch, move, and groove through hundreds of body-friendly challenges from cozy couch stretches to full-body adventures.',
        icon: 'tabler:wand',
      },
      {
        title: 'Motion-based controls',
        description:
          'Your body is the controller! Use real-life movement to help Petey train, explore, and escape his island. (Yes, squats totally count.)',
        icon: 'tabler:settings',
      },
      {
        title: 'Personalize Petey',
        description:
          'Unlock gear, hats, and accessories to style your capybara your way. The more you move, the more Petey thrives(and looks adorable doing it).',
        icon: 'tabler:template',
      },
      {
        title: 'Suit your lifestyle',
        description: 'Whether you’re a daily stretcher or just starting out, Petey’s got a pace for you. Build habits, earn streaks, and progress without pressure.',
        icon: 'tabler:carousel-horizontal',
      },
    ]}
    image={{
      src: stretchImage,
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Main Features</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Reminders',
        description: 'Petey’s got your back! Get gentle nudges to stretch, hydrate, or just take a deep breath—so your streak (and your chill) stays strong.',
        icon: 'tabler:wifi-off',
      },
      {
        title: 'Location based activities',
        description:
          'Stuck inside or out exploring? Petey adjusts your stretch quests based on where you are. Couch, park, or office—we got you.',
        icon: 'tabler:file-download',
      },
      {
        title: 'Share progress across devices',
        description: 'Seamless syncing means your stretch adventure continues no matter where you log in. Petey’s always right there with you.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Customize your training',
        description: `Pick your pace, focus areas, and daily goals. Whether you're a beginner or a bendy pro, Petey tailors the journey to fit you.`,
        icon: 'tabler:heart',
      },
    ]}
  image={{
  src: meditateImage,
  alt: 'Meditating capybara image',
}}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Other features</h3>
    </Fragment>
  </Content>

